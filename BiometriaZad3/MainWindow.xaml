<Window x:Class="BiometriaZad3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiometriaZad3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Image x:Name="Image"></Image>
            
            <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Center">
                <Button x:Name="ChooseFile" HorizontalAlignment="Center" Height="20" VerticalAlignment="Top" Click="ChooseFile_Click">Open file</Button>
                <Button x:Name="OriginalImage" HorizontalAlignment="Center" Height="20" VerticalAlignment="Top" Click="OriginalImage_Click">Original</Button>
                <Button x:Name="BinaryImage" HorizontalAlignment="Center" Height="20" VerticalAlignment="Top" Click="BinaryImage_Click">GrayScale</Button>
                <Button x:Name="BrensenAlgorithm" HorizontalAlignment="Center" Grid.Column="1" Click="BrensenAlgorithm_Click">Brensen</Button>
                <Button x:Name="SauvolaAlgorithm" HorizontalAlignment="Center" Grid.Column="1" Click="SauvolaAlgorithm_Click">Sauvola</Button>
                <Button x:Name="NiblackAlgorithm" HorizontalAlignment="Center" Grid.Column="1" Click="NiblackAlgorithm_Click">Niblack</Button>
                <Button x:Name="PhansalkarAlgorithm" HorizontalAlignment="Center" Grid.Column="1" Click="PhansalkarAlgorithm_Click">Phansalkar</Button>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label x:Name="RangeLabel" Grid.Column="0" Grid.Row="0">Range: </Label>
            <Slider Grid.Column="0" Grid.Row="1" x:Name="RangeSlider" Minimum="3" Maximum="13" Value="5" TickFrequency="2" IsSnapToTickEnabled="True" ValueChanged="RangeSlider_ValueChanged"></Slider>
            
            <Label x:Name="BrensenLabel" Grid.Column="1" Grid.Row="0">Brensen limit: </Label>
            <Slider Grid.Column="1" Grid.Row="1" x:Name="LimitSlider" Minimum="0" Maximum="255" Value="0" ValueChanged="LimitSlider_ValueChanged" TickFrequency="1" IsSnapToTickEnabled="True"></Slider>
            
            <Label x:Name="KLabel" Grid.Column="2" Grid.Row="0">Sauvola and Niblack k: </Label>
            <Slider Grid.Column="2" Grid.Row="1" x:Name="SauvolaKSlider" Minimum="0.2" Maximum="0.5" Value="0.2" ValueChanged="SauvolaKSlider_ValueChanged"></Slider>
            
            <Label x:Name="RLabel" Grid.Column="3" Grid.Row="0">Savoula R: </Label>
            <Slider Grid.Column="3" Grid.Row="1" x:Name="SauvolaRSlider" Minimum="1" Maximum="255" Value="128" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="SauvolaRSlider_ValueChanged"></Slider>

            <Grid Grid.Column="4" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label>Phanskalar:</Label>

                <Label x:Name="PhanskalarPLabel" Grid.Column="1" Grid.Row="1">p: </Label>
                <Slider x:Name="PhanskalarP" Grid.Row="1" Minimum="0" Value="3" ValueChanged="PhanskalarP_ValueChanged"></Slider>

                <Label x:Name="PhanskalarQLabel" Grid.Row="2" Grid.Column="1">q: </Label>
                <Slider x:Name="PhanskalarQ" Grid.Row="2" Value="10" Maximum="20" ValueChanged="PhanskalarQ_ValueChanged"></Slider>
            </Grid>

            <Grid Grid.Column="4" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label x:Name="PhanskalarKLabel" Grid.Column="1">k: </Label>
                <Slider x:Name="PhanskalarK" Minimum="0.2" Maximum="0.5" Value="0.25" ValueChanged="PhanskalarK_ValueChanged"></Slider>

                <Label x:Name="PhanskalarRLabel" Grid.Row="1" Grid.Column="1">R: 5</Label>
                <Slider x:Name="PhanskalarR" Grid.Row="1" Minimum="0" Maximum="10" Value="5" ValueChanged="PhanskalarR_ValueChanged"></Slider>
            </Grid>
        </Grid>
    </Grid>
</Window>
